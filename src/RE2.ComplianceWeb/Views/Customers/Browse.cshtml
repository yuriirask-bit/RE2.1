@model IEnumerable<RE2.ComplianceCore.Models.Customer>
@{
    ViewData["Title"] = "Browse D365FO Customers";
}

<div class="container">
    <h1><i class="bi bi-search"></i> Browse D365FO Customers</h1>
    <p>All customers from D365 Finance & Operations. Select a customer to configure compliance.</p>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Compliance Customers
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Account</th>
                <th>Organization Name</th>
                <th>Data Area</th>
                <th>Country</th>
                <th>Compliance Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <em>No customers found in D365 F&O. Verify the D365FO connection.</em>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td><strong>@customer.CustomerAccount</strong></td>
                        <td>@customer.OrganizationName</td>
                        <td><code>@customer.DataAreaId</code></td>
                        <td>@customer.AddressCountryRegionId</td>
                        <td>
                            @if (customer.IsComplianceConfigured)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Compliance Configured</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark">Not Configured</span>
                            }
                        </td>
                        <td>
                            @if (customer.IsComplianceConfigured)
                            {
                                <a asp-action="Details" asp-route-customerAccount="@customer.CustomerAccount" asp-route-dataAreaId="@customer.DataAreaId"
                                   class="btn btn-sm btn-outline-primary" title="View Compliance Details">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            }
                            else
                            {
                                <a asp-action="Configure" asp-route-customerAccount="@customer.CustomerAccount" asp-route-dataAreaId="@customer.DataAreaId"
                                   class="btn btn-sm btn-primary" title="Configure Compliance">
                                    <i class="bi bi-plus-circle"></i> Configure
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="text-muted">
        Showing @Model.Count() customer(s)
    </div>
</div>
