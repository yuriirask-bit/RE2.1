@model RE2.ComplianceWeb.Controllers.CustomerEditViewModel
@{
    ViewData["Title"] = "Edit Customer Compliance";
}

<div class="container">
    <h1>Edit Customer Compliance</h1>
    <p>Edit compliance extension for customer <strong>@Model.CustomerAccount</strong> in data area <code>@Model.DataAreaId</code>.</p>

    <div asp-validation-summary="All" class="alert alert-danger" style="display:none;"></div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CustomerAccount" />
        <input type="hidden" asp-for="DataAreaId" />

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">D365FO Customer (Read-Only)</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-5">Customer Account</dt>
                            <dd class="col-sm-7"><code>@Model.CustomerAccount</code></dd>

                            <dt class="col-sm-5">Data Area</dt>
                            <dd class="col-sm-7"><code>@Model.DataAreaId</code></dd>

                            <dt class="col-sm-5">Organization Name</dt>
                            <dd class="col-sm-7">@(ViewBag.OrganizationName ?? "-")</dd>

                            <dt class="col-sm-5">Country</dt>
                            <dd class="col-sm-7">@(ViewBag.Country ?? "-")</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Compliance Configuration</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="BusinessCategory" class="form-label">Business Category *</label>
                            <select asp-for="BusinessCategory" class="form-select" asp-items="@ViewBag.BusinessCategories" required>
                                <option value="">Select category...</option>
                            </select>
                            <span asp-validation-for="BusinessCategory" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ApprovalStatus" class="form-label">Approval Status *</label>
                            <select asp-for="ApprovalStatus" class="form-select" asp-items="@ViewBag.ApprovalStatuses" required>
                            </select>
                            <span asp-validation-for="ApprovalStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GdpQualificationStatus" class="form-label">GDP Qualification Status</label>
                            <select asp-for="GdpQualificationStatus" class="form-select" asp-items="@ViewBag.GdpStatuses">
                            </select>
                            <span asp-validation-for="GdpQualificationStatus" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OnboardingDate" class="form-label">Onboarding Date</label>
                            <input asp-for="OnboardingDate" type="date" class="form-control" />
                            <span asp-validation-for="OnboardingDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NextReVerificationDate" class="form-label">Next Re-Verification Date</label>
                            <input asp-for="NextReVerificationDate" type="date" class="form-control" />
                            <span asp-validation-for="NextReVerificationDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card mb-3 @(Model.IsSuspended ? "border-danger" : "")">
                    <div class="card-header @(Model.IsSuspended ? "bg-danger text-white" : "")">
                        <h5 class="mb-0">Suspension Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3">
                            <input asp-for="IsSuspended" class="form-check-input" type="checkbox" />
                            <label asp-for="IsSuspended" class="form-check-label">Customer is Suspended</label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SuspensionReason" class="form-label">Suspension Reason</label>
                            <textarea asp-for="SuspensionReason" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="SuspensionReason" class="text-danger"></span>
                            <small class="text-muted">Required if customer is suspended</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Save Changes
            </button>
            <a asp-action="Details" asp-route-customerAccount="@Model.CustomerAccount" asp-route-dataAreaId="@Model.DataAreaId" class="btn btn-secondary">Cancel</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
