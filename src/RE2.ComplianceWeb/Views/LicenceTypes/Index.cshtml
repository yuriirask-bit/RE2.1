@model IEnumerable<RE2.ComplianceCore.Models.LicenceType>
@{
    ViewData["Title"] = "Licence Type Management";
}

<div class="container">
    <h1>Licence Type Management</h1>
    <p>View and manage licence type definitions</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Licence Type
            </a>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <select name="activeOnly" class="form-select me-2" onchange="this.form.submit()">
                    <option value="">All Licence Types</option>
                    <option value="true" selected="@(ViewBag.ActiveOnlyFilter == true)">Active Only</option>
                </select>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Issuing Authority</th>
                <th>Validity (Months)</th>
                <th>Permitted Activities</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <em>No licence types found. Click "Create New Licence Type" to add one.</em>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var licenceType in Model)
                {
                    <tr class="@(!licenceType.IsActive ? "table-secondary" : "")">
                        <td>@licenceType.Name</td>
                        <td>@licenceType.IssuingAuthority</td>
                        <td>
                            @if (licenceType.TypicalValidityMonths.HasValue)
                            {
                                @licenceType.TypicalValidityMonths @:months
                            }
                            else
                            {
                                <span class="text-muted">Permanent</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex flex-wrap gap-1">
                                @if (licenceType.PermittedActivities.HasFlag(RE2.Shared.Constants.LicenceTypes.PermittedActivity.Possess))
                                {
                                    <span class="badge bg-primary">Possess</span>
                                }
                                @if (licenceType.PermittedActivities.HasFlag(RE2.Shared.Constants.LicenceTypes.PermittedActivity.Store))
                                {
                                    <span class="badge bg-primary">Store</span>
                                }
                                @if (licenceType.PermittedActivities.HasFlag(RE2.Shared.Constants.LicenceTypes.PermittedActivity.Distribute))
                                {
                                    <span class="badge bg-primary">Distribute</span>
                                }
                                @if (licenceType.PermittedActivities.HasFlag(RE2.Shared.Constants.LicenceTypes.PermittedActivity.Import))
                                {
                                    <span class="badge bg-primary">Import</span>
                                }
                                @if (licenceType.PermittedActivities.HasFlag(RE2.Shared.Constants.LicenceTypes.PermittedActivity.Export))
                                {
                                    <span class="badge bg-primary">Export</span>
                                }
                                @if (licenceType.PermittedActivities.HasFlag(RE2.Shared.Constants.LicenceTypes.PermittedActivity.Manufacture))
                                {
                                    <span class="badge bg-primary">Manufacture</span>
                                }
                                @if (licenceType.PermittedActivities.HasFlag(RE2.Shared.Constants.LicenceTypes.PermittedActivity.HandlePrecursors))
                                {
                                    <span class="badge bg-primary">Precursors</span>
                                }
                            </div>
                        </td>
                        <td>
                            @if (licenceType.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@licenceType.LicenceTypeId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@licenceType.LicenceTypeId" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="ToggleActive" asp-route-id="@licenceType.LicenceTypeId" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(licenceType.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                        title="@(licenceType.IsActive ? "Deactivate" : "Activate")">
                                    <i class="bi @(licenceType.IsActive ? "bi-pause-circle" : "bi-play-circle")"></i>
                                </button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@licenceType.LicenceTypeId" method="post" style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this licence type?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <a asp-controller="Licences" asp-action="Index" class="btn btn-secondary">Back to Licences</a>
</div>
