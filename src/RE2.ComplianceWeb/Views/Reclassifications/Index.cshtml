@model IEnumerable<RE2.ComplianceCore.Models.SubstanceReclassification>
@using RE2.Shared.Constants
@{
    ViewData["Title"] = "Substance Reclassifications";
}

<div class="container">
    <h1>Substance Reclassifications</h1>
    <p>Manage controlled substance reclassifications per FR-066</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Reclassification
            </a>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <select name="status" class="form-select me-2" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    <option value="Pending" selected="@(ViewBag.StatusFilter == "Pending")">Pending</option>
                </select>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Substance</th>
                <th>Previous Classification</th>
                <th>New Classification</th>
                <th>Effective Date</th>
                <th>Status</th>
                <th>Affected</th>
                <th>Flagged</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center">
                        <em>No reclassifications found. Click "Create New Reclassification" to add one.</em>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@(r.Substance?.SubstanceName ?? "Unknown")</td>
                        <td>
                            @if (r.PreviousOpiumActList != SubstanceCategories.OpiumActList.None)
                            {
                                <span class="badge bg-info">@r.PreviousOpiumActList</span>
                            }
                            @if (r.PreviousPrecursorCategory != SubstanceCategories.PrecursorCategory.None)
                            {
                                <span class="badge bg-secondary">@r.PreviousPrecursorCategory</span>
                            }
                        </td>
                        <td>
                            @if (r.NewOpiumActList != SubstanceCategories.OpiumActList.None)
                            {
                                <span class="badge bg-warning text-dark">@r.NewOpiumActList</span>
                            }
                            @if (r.NewPrecursorCategory != SubstanceCategories.PrecursorCategory.None)
                            {
                                <span class="badge bg-secondary">@r.NewPrecursorCategory</span>
                            }
                            @if (r.IsUpgrade())
                            {
                                <i class="bi bi-arrow-up-circle text-danger" title="Upgrade (stricter)"></i>
                            }
                            else
                            {
                                <i class="bi bi-arrow-down-circle text-success" title="Downgrade"></i>
                            }
                        </td>
                        <td>
                            <span class="@(r.IsEffective() ? "text-success fw-bold" : "")">
                                @r.EffectiveDate.ToString("yyyy-MM-dd")
                            </span>
                        </td>
                        <td>
                            @{
                                var statusClass = r.Status switch
                                {
                                    RE2.ComplianceCore.Models.ReclassificationStatus.Pending => "bg-warning text-dark",
                                    RE2.ComplianceCore.Models.ReclassificationStatus.Processing => "bg-info",
                                    RE2.ComplianceCore.Models.ReclassificationStatus.Completed => "bg-success",
                                    RE2.ComplianceCore.Models.ReclassificationStatus.Cancelled => "bg-secondary",
                                    _ => "bg-light"
                                };
                            }
                            <span class="badge @statusClass">@r.Status</span>
                        </td>
                        <td>@r.AffectedCustomerCount</td>
                        <td>
                            @if (r.FlaggedCustomerCount > 0)
                            {
                                <span class="badge bg-danger">@r.FlaggedCustomerCount</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@r.ReclassificationId" class="btn btn-sm btn-outline-primary" title="View Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            @if (r.Status == RE2.ComplianceCore.Models.ReclassificationStatus.Pending)
                            {
                                <a asp-action="Process" asp-route-id="@r.ReclassificationId" class="btn btn-sm btn-outline-success" title="Process">
                                    <i class="bi bi-play-circle"></i>
                                </a>
                            }
                            @if (r.Status == RE2.ComplianceCore.Models.ReclassificationStatus.Completed)
                            {
                                <a asp-action="Notification" asp-route-id="@r.ReclassificationId" class="btn btn-sm btn-outline-info" title="View Notification">
                                    <i class="bi bi-bell"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
