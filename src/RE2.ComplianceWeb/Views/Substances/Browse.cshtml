@model IEnumerable<RE2.ComplianceCore.Models.Product>
@{
    ViewData["Title"] = "Browse D365 Products";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Browse D365 Products</h1>
            <p class="text-muted mb-0">Products with controlled substance attributes from D365 F&O</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Substances
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <span>
                <i class="bi bi-box-seam"></i> Controlled Products
                <span class="badge bg-secondary">@Model.Count() products</span>
            </span>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-3">No controlled products found in D365.</p>
                </div>
            }
            else
            {
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Item Number</th>
                            <th>Data Area</th>
                            <th>Product Name</th>
                            <th>Substance Code</th>
                            <th>Opium Act</th>
                            <th>Precursor</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td><code>@product.ItemNumber</code></td>
                                <td>@product.DataAreaId</td>
                                <td>@product.ProductName</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(product.SubstanceCode))
                                    {
                                        <code>@product.SubstanceCode</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(product.OpiumActListValue))
                                    {
                                        <span class="badge bg-warning text-dark">@product.OpiumActListValue</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(product.PrecursorCategoryValue))
                                    {
                                        <span class="badge bg-info">@product.PrecursorCategoryValue</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(product.SubstanceCode))
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-substanceCode="@product.SubstanceCode"
                                               class="btn btn-outline-primary" title="View Substance">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Configure" asp-route-substanceCode="@product.SubstanceCode"
                                               class="btn btn-outline-secondary" title="Configure Compliance">
                                                <i class="bi bi-gear"></i>
                                            </a>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
