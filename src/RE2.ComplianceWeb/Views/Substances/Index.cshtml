@model IEnumerable<RE2.ComplianceCore.Models.ControlledSubstance>
@using RE2.Shared.Constants
@{
    ViewData["Title"] = "Controlled Substances";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Controlled Substances</h1>
        <a asp-action="Browse" class="btn btn-primary">
            <i class="bi bi-search"></i> Browse D365 Products
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h6 class="mb-0">Filter Substances</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="opiumActList" class="form-label">Opium Act List</label>
                    <select name="opiumActList" id="opiumActList" class="form-select">
                        <option value="">All</option>
                        <option value="ListI" selected="@(ViewBag.OpiumActFilter == "ListI")">List I (Hard Drugs)</option>
                        <option value="ListII" selected="@(ViewBag.OpiumActFilter == "ListII")">List II (Therapeutic)</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="precursorCategory" class="form-label">Precursor Category</label>
                    <select name="precursorCategory" id="precursorCategory" class="form-select">
                        <option value="">All</option>
                        <option value="Category1" selected="@(ViewBag.PrecursorFilter == "Category1")">Category 1 (Strictest)</option>
                        <option value="Category2" selected="@(ViewBag.PrecursorFilter == "Category2")">Category 2</option>
                        <option value="Category3" selected="@(ViewBag.PrecursorFilter == "Category3")">Category 3</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" name="search" id="search" class="form-control" placeholder="Name or code..." value="@ViewBag.SearchTerm">
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-search"></i> Filter
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>
                <i class="bi bi-capsule"></i> Substance Master List
                <span class="badge bg-secondary">@Model.Count() substances</span>
            </span>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="showInactive"
                       onchange="window.location.href='@Url.Action("Index")?showInactive=' + this.checked"
                       @(ViewBag.ShowInactive == true ? "checked" : "")>
                <label class="form-check-label" for="showInactive">Show Inactive</label>
            </div>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-3">No substances found matching the criteria.</p>
                </div>
            }
            else
            {
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Substance Code</th>
                            <th>Substance Name</th>
                            <th>Opium Act List</th>
                            <th>Precursor Category</th>
                            <th>Compliance</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var substance in Model)
                        {
                            <tr class="@(!substance.IsActive ? "table-secondary" : "")">
                                <td><code>@substance.SubstanceCode</code></td>
                                <td>@substance.SubstanceName</td>
                                <td>
                                    @if (substance.OpiumActList != SubstanceCategories.OpiumActList.None)
                                    {
                                        var opiumClass = substance.OpiumActList == SubstanceCategories.OpiumActList.ListI
                                            ? "bg-danger" : "bg-warning text-dark";
                                        <span class="badge @opiumClass">@substance.OpiumActList</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (substance.PrecursorCategory != SubstanceCategories.PrecursorCategory.None)
                                    {
                                        var precursorClass = substance.PrecursorCategory switch
                                        {
                                            SubstanceCategories.PrecursorCategory.Category1 => "bg-danger",
                                            SubstanceCategories.PrecursorCategory.Category2 => "bg-warning text-dark",
                                            _ => "bg-info"
                                        };
                                        <span class="badge @precursorClass">@substance.PrecursorCategory</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (substance.IsComplianceConfigured)
                                    {
                                        <span class="badge bg-primary">Configured</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-outline-secondary text-muted border">Not Configured</span>
                                    }
                                </td>
                                <td>
                                    @if (substance.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-substanceCode="@substance.SubstanceCode"
                                           class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Configure" asp-route-substanceCode="@substance.SubstanceCode"
                                           class="btn btn-outline-secondary" title="Configure Compliance">
                                            <i class="bi bi-gear"></i>
                                        </a>
                                        @if (substance.IsActive)
                                        {
                                            <form asp-action="Deactivate" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="substanceCode" value="@substance.SubstanceCode" />
                                                <button type="submit" class="btn btn-outline-warning" title="Deactivate"
                                                        onclick="return confirm('Are you sure you want to deactivate this substance?');">
                                                    <i class="bi bi-pause-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="Reactivate" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="substanceCode" value="@substance.SubstanceCode" />
                                                <button type="submit" class="btn btn-outline-success" title="Reactivate">
                                                    <i class="bi bi-play-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="mt-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title">Classification Reference</h6>
                <div class="row">
                    <div class="col-md-6">
                        <p class="small mb-1"><strong>Opium Act Lists (Dutch Law):</strong></p>
                        <ul class="small mb-0">
                            <li><span class="badge bg-danger">List I</span> Hard drugs (heroin, cocaine, MDMA) - Strictest controls</li>
                            <li><span class="badge bg-warning text-dark">List II</span> Therapeutic substances (cannabis, morphine)</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <p class="small mb-1"><strong>EU Precursor Categories:</strong></p>
                        <ul class="small mb-0">
                            <li><span class="badge bg-danger">Category 1</span> Strictest (ephedrine, acetic anhydride)</li>
                            <li><span class="badge bg-warning text-dark">Category 2</span> Moderate controls</li>
                            <li><span class="badge bg-info">Category 3</span> Least restrictive</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
