@model RE2.ComplianceWeb.Controllers.CapaCompleteViewModel
@{
    ViewData["Title"] = "Complete CAPA";
    var capa = ViewBag.Capa as RE2.ComplianceCore.Models.Capa;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Capas">CAPA Dashboard</a></li>
            <li class="breadcrumb-item active">Complete CAPA</li>
        </ol>
    </nav>

    <h1><i class="bi bi-check-circle"></i> Complete CAPA</h1>

    @if (capa != null)
    {
        <div class="card mt-3 mb-3">
            <div class="card-header"><h5 class="mb-0">@capa.CapaNumber</h5></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@capa.Description</dd>

                    <dt class="col-sm-3">Owner</dt>
                    <dd class="col-sm-9">@capa.OwnerName</dd>

                    <dt class="col-sm-3">Due Date</dt>
                    <dd class="col-sm-9">
                        @capa.DueDate.ToString("yyyy-MM-dd")
                        @if (capa.IsOverdue())
                        {
                            <span class="badge bg-danger ms-2">Overdue</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="CompleteCapa" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CapaId" />

        <div class="card" style="max-width: 600px;">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="CompletionDate" class="form-label">Completion Date <span class="text-danger">*</span></label>
                    <input asp-for="CompletionDate" type="date" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="VerificationNotes" class="form-label">Verification Notes</label>
                    <textarea asp-for="VerificationNotes" class="form-control" rows="5"
                              placeholder="Describe how the effectiveness of the corrective action was verified..."></textarea>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Mark as Completed
            </button>
            <a asp-action="Capas" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
