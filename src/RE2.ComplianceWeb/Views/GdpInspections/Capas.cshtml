@model IEnumerable<RE2.ComplianceCore.Models.Capa>
@{
    ViewData["Title"] = "CAPA Dashboard";
    var overdueCount = (int)(ViewBag.OverdueCount ?? 0);
    var openCount = (int)(ViewBag.OpenCount ?? 0);
    var completedCount = (int)(ViewBag.CompletedCount ?? 0);
}

<div class="container">
    <h1><i class="bi bi-shield-check"></i> CAPA Dashboard</h1>
    <p>Corrective and Preventive Action tracking per FR-042</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card @(overdueCount > 0 ? "border-danger" : "")">
                <div class="card-body text-center">
                    <h2 class="@(overdueCount > 0 ? "text-danger" : "text-muted")">@overdueCount</h2>
                    <p class="mb-0"><i class="bi bi-exclamation-triangle"></i> Overdue</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="text-primary">@openCount</h2>
                    <p class="mb-0"><i class="bi bi-clock"></i> Open</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="text-success">@completedCount</h2>
                    <p class="mb-0"><i class="bi bi-check-circle"></i> Completed</p>
                </div>
            </div>
        </div>
    </div>

    @if (overdueCount > 0)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>@overdueCount CAPA(s) are overdue!</strong> Immediate action is required.
        </div>
    }

    <!-- CAPA Table -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>CAPA #</th>
                <th>Description</th>
                <th>Owner</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <em>No CAPAs recorded. Create a CAPA from an inspection finding.</em>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var capa in Model.OrderBy(c => c.Status == RE2.ComplianceCore.Models.CapaStatus.Completed).ThenBy(c => c.DueDate))
                {
                    var isOverdue = capa.IsOverdue();
                    <tr class="@(isOverdue ? "table-danger" : "")">
                        <td><strong>@capa.CapaNumber</strong></td>
                        <td>
                            @(capa.Description.Length > 80
                                ? capa.Description[..80] + "..."
                                : capa.Description)
                        </td>
                        <td>@capa.OwnerName</td>
                        <td>
                            @capa.DueDate.ToString("yyyy-MM-dd")
                            @if (capa.CompletionDate.HasValue)
                            {
                                <br /><small class="text-success">Completed: @capa.CompletionDate.Value.ToString("yyyy-MM-dd")</small>
                            }
                        </td>
                        <td>
                            @if (capa.Status == RE2.ComplianceCore.Models.CapaStatus.Completed)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle"></i> Completed</span>
                            }
                            else if (isOverdue)
                            {
                                <span class="badge bg-danger"><i class="bi bi-exclamation-triangle"></i> Overdue</span>
                            }
                            else
                            {
                                <span class="badge bg-primary"><i class="bi bi-clock"></i> Open</span>
                            }
                        </td>
                        <td>
                            @if (capa.Status != RE2.ComplianceCore.Models.CapaStatus.Completed)
                            {
                                <a asp-action="CompleteCapa" asp-route-id="@capa.CapaId"
                                   class="btn btn-sm btn-outline-success" title="Complete CAPA">
                                    <i class="bi bi-check-circle"></i> Complete
                                </a>
                            }
                            else if (!string.IsNullOrEmpty(capa.VerificationNotes))
                            {
                                <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip"
                                        title="@capa.VerificationNotes">
                                    <i class="bi bi-info-circle"></i> Notes
                                </button>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="text-muted">
        Showing @Model.Count() CAPA(s)
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Inspections
        </a>
    </div>
</div>
