@model RE2.ComplianceWeb.Controllers.GdpInspectionCreateViewModel
@{
    ViewData["Title"] = "Record GDP Inspection";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">GDP Inspections</a></li>
            <li class="breadcrumb-item active">Record Inspection</li>
        </ol>
    </nav>

    <h1><i class="bi bi-plus-circle"></i> Record GDP Inspection</h1>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Create" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><h5 class="mb-0">Inspection Details</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="InspectionDate" class="form-label">Inspection Date <span class="text-danger">*</span></label>
                            <input asp-for="InspectionDate" type="date" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="InspectorName" class="form-label">Inspector / Authority <span class="text-danger">*</span></label>
                            <input asp-for="InspectorName" class="form-control" placeholder="e.g., IGJ, Internal QA, Self-Inspection Team" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="InspectionType" class="form-label">Inspection Type <span class="text-danger">*</span></label>
                            <select asp-for="InspectionType" asp-items="@(ViewBag.InspectionTypes as SelectList)" class="form-select">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SiteId" class="form-label">GDP Site <span class="text-danger">*</span></label>
                            <select asp-for="SiteId" asp-items="@(ViewBag.Sites as SelectList)" class="form-select">
                                <option value="">-- Select Site --</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><h5 class="mb-0">Additional Information</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="FindingsSummary" class="form-label">Findings Summary</label>
                            <textarea asp-for="FindingsSummary" class="form-control" rows="5" placeholder="Overall summary of inspection findings..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReportReferenceUrl" class="form-label">Report Reference URL</label>
                            <input asp-for="ReportReferenceUrl" type="url" class="form-control" placeholder="https://..." />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Record Inspection
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
