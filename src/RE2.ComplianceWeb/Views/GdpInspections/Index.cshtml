@model IEnumerable<RE2.ComplianceCore.Models.GdpInspection>
@{
    ViewData["Title"] = "GDP Inspections";
}

<div class="container">
    <h1><i class="bi bi-clipboard-check"></i> GDP Inspections</h1>
    <p>GDP regulatory, internal, and self-inspection records</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Record New Inspection
            </a>
            <a asp-action="Capas" class="btn btn-outline-warning ms-2">
                <i class="bi bi-exclamation-triangle"></i> CAPA Dashboard
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Inspector</th>
                <th>Type</th>
                <th>Site</th>
                <th>Summary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <em>No GDP inspections recorded yet. Click "Record New Inspection" to create one.</em>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var inspection in Model.OrderByDescending(i => i.InspectionDate))
                {
                    <tr>
                        <td>@inspection.InspectionDate.ToString("yyyy-MM-dd")</td>
                        <td>@inspection.InspectorName</td>
                        <td>
                            @switch (inspection.InspectionType)
                            {
                                case RE2.ComplianceCore.Models.GdpInspectionType.RegulatoryAuthority:
                                    <span class="badge bg-danger">Regulatory Authority</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpInspectionType.Internal:
                                    <span class="badge bg-primary">Internal</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpInspectionType.SelfInspection:
                                    <span class="badge bg-info">Self-Inspection</span>
                                    break;
                            }
                        </td>
                        <td><code>@inspection.SiteId.ToString()[..8]...</code></td>
                        <td>
                            @if (!string.IsNullOrEmpty(inspection.FindingsSummary))
                            {
                                @(inspection.FindingsSummary.Length > 80
                                    ? inspection.FindingsSummary[..80] + "..."
                                    : inspection.FindingsSummary)
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@inspection.InspectionId"
                               class="btn btn-sm btn-outline-primary" title="View Details">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="text-muted">
        Showing @Model.Count() inspection(s)
    </div>
</div>
