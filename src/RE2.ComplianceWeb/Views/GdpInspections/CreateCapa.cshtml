@model RE2.ComplianceWeb.Controllers.CapaCreateViewModel
@{
    ViewData["Title"] = "Create CAPA";
    var finding = ViewBag.Finding as RE2.ComplianceCore.Models.GdpInspectionFinding;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">GDP Inspections</a></li>
            <li class="breadcrumb-item"><a asp-action="Capas">CAPA Dashboard</a></li>
            <li class="breadcrumb-item active">Create CAPA</li>
        </ol>
    </nav>

    <h1><i class="bi bi-shield-check"></i> Create CAPA</h1>

    @if (finding != null)
    {
        <div class="alert alert-info mt-3">
            <h6>Linked Finding:</h6>
            <p class="mb-1">
                @switch (finding.Classification)
                {
                    case RE2.ComplianceCore.Models.FindingClassification.Critical:
                        <span class="badge bg-danger">Critical</span>
                        break;
                    case RE2.ComplianceCore.Models.FindingClassification.Major:
                        <span class="badge bg-warning text-dark">Major</span>
                        break;
                    case RE2.ComplianceCore.Models.FindingClassification.Other:
                        <span class="badge bg-info">Other</span>
                        break;
                }
                @if (!string.IsNullOrEmpty(finding.FindingNumber))
                {
                    <code class="ms-1">@finding.FindingNumber</code>
                }
            </p>
            <p class="mb-0">@finding.FindingDescription</p>
        </div>
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="CreateCapa" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="FindingId" />

        <div class="card" style="max-width: 600px;">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="CapaNumber" class="form-label">CAPA Number <span class="text-danger">*</span></label>
                    <input asp-for="CapaNumber" class="form-control" placeholder="e.g., CAPA-2025-001" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Corrective/Preventive Action <span class="text-danger">*</span></label>
                    <textarea asp-for="Description" class="form-control" rows="4" required
                              placeholder="Describe the corrective and/or preventive action to be taken..."></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="OwnerName" class="form-label">Responsible Person <span class="text-danger">*</span></label>
                    <input asp-for="OwnerName" class="form-control" placeholder="Person responsible for completing this CAPA" required />
                </div>

                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label">Due Date <span class="text-danger">*</span></label>
                    <input asp-for="DueDate" type="date" class="form-control" required />
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Create CAPA
            </button>
            <a asp-action="Capas" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
