@model RE2.ComplianceWeb.Controllers.GdpEquipmentCreateViewModel
@{
    ViewData["Title"] = "Add Equipment Qualification";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">GDP Equipment</a></li>
            <li class="breadcrumb-item active">Add Equipment</li>
        </ol>
    </nav>

    <h1><i class="bi bi-plus-circle"></i> Add Equipment Qualification</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Create" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><h5 class="mb-0">Equipment Details</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="EquipmentName" class="form-label">Equipment Name <span class="text-danger">*</span></label>
                            <input asp-for="EquipmentName" class="form-control" placeholder="e.g., Temperature Vehicle TRK-001" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="EquipmentType" class="form-label">Equipment Type <span class="text-danger">*</span></label>
                            <select asp-for="EquipmentType" asp-items="@(ViewBag.EquipmentTypes as SelectList)" class="form-select">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProviderId" class="form-label">Provider</label>
                            <select asp-for="ProviderId" asp-items="@(ViewBag.Providers as SelectList)" class="form-select">
                                <option value="">-- None --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SiteId" class="form-label">Site</label>
                            <select asp-for="SiteId" asp-items="@(ViewBag.Sites as SelectList)" class="form-select">
                                <option value="">-- None --</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><h5 class="mb-0">Qualification Information</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="QualificationDate" class="form-label">Qualification Date <span class="text-danger">*</span></label>
                            <input asp-for="QualificationDate" type="date" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequalificationDueDate" class="form-label">Requalification Due Date</label>
                            <input asp-for="RequalificationDueDate" type="date" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="QualificationStatus" class="form-label">Status <span class="text-danger">*</span></label>
                            <select asp-for="QualificationStatus" asp-items="@(ViewBag.QualificationStatuses as SelectList)" class="form-select">
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="QualifiedBy" class="form-label">Qualified By <span class="text-danger">*</span></label>
                            <input asp-for="QualifiedBy" class="form-control" placeholder="e.g., QA Engineer Name" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Create Equipment Qualification
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
