@model RE2.ComplianceCore.Models.GdpEquipmentQualification
@{
    ViewData["Title"] = $"Equipment - {Model.EquipmentName}";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">GDP Equipment</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1><i class="bi bi-gear-wide-connected"></i> @Model.EquipmentName</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><h5 class="mb-0">Equipment Information</h5></div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Equipment Name</dt>
                        <dd class="col-sm-7">@Model.EquipmentName</dd>

                        <dt class="col-sm-5">Type</dt>
                        <dd class="col-sm-7">
                            @switch (Model.EquipmentType)
                            {
                                case RE2.ComplianceCore.Models.GdpEquipmentType.TemperatureControlledVehicle:
                                    <span class="badge bg-info"><i class="bi bi-truck"></i> Temperature Controlled Vehicle</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpEquipmentType.MonitoringSystem:
                                    <span class="badge bg-secondary"><i class="bi bi-thermometer-half"></i> Monitoring System</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpEquipmentType.StorageEquipment:
                                    <span class="badge bg-dark"><i class="bi bi-box-seam"></i> Storage Equipment</span>
                                    break;
                                default:
                                    <span class="badge bg-light text-dark">Other</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-5">Status</dt>
                        <dd class="col-sm-7">
                            @switch (Model.QualificationStatus)
                            {
                                case RE2.ComplianceCore.Models.GdpQualificationStatusType.Qualified:
                                    <span class="badge bg-success">Qualified</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpQualificationStatusType.DueForRequalification:
                                    <span class="badge bg-warning text-dark">Due for Requalification</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpQualificationStatusType.Expired:
                                    <span class="badge bg-danger">Expired</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpQualificationStatusType.NotQualified:
                                    <span class="badge bg-secondary">Not Qualified</span>
                                    break;
                            }
                        </dd>

                        @if (Model.ProviderId.HasValue)
                        {
                            <dt class="col-sm-5">Provider ID</dt>
                            <dd class="col-sm-7"><code>@Model.ProviderId</code></dd>
                        }

                        @if (Model.SiteId.HasValue)
                        {
                            <dt class="col-sm-5">Site ID</dt>
                            <dd class="col-sm-7"><code>@Model.SiteId</code></dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><h5 class="mb-0">Qualification Details</h5></div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Qualification Date</dt>
                        <dd class="col-sm-7">@Model.QualificationDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-5">Requalification Due</dt>
                        <dd class="col-sm-7">
                            @if (Model.RequalificationDueDate.HasValue)
                            {
                                @Model.RequalificationDueDate.Value.ToString("yyyy-MM-dd")
                                @if (Model.IsExpired())
                                {
                                    <span class="badge bg-danger ms-2">Expired</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Not set</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Qualified By</dt>
                        <dd class="col-sm-7">@Model.QualifiedBy</dd>

                        <dt class="col-sm-5">Notes</dt>
                        <dd class="col-sm-7">
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                @Model.Notes
                            }
                            else
                            {
                                <span class="text-muted">No notes</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.EquipmentQualificationId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <form asp-action="Delete" asp-route-id="@Model.EquipmentQualificationId" method="post" class="d-inline"
              onsubmit="return confirm('Are you sure you want to delete this equipment qualification?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
