@model RE2.ComplianceWeb.Controllers.TransactionValidateViewModel
@{
    ViewData["Title"] = "Validate Transaction";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Validate Transaction</h1>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Validate" method="post">
    @Html.AntiForgeryToken()

    <div class="row">
        <!-- Transaction Details -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Transaction Details</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="ExternalId" class="form-label">External ID *</label>
                        <input asp-for="ExternalId" class="form-control" />
                        <span asp-validation-for="ExternalId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TransactionType" class="form-label">Type *</label>
                            <select asp-for="TransactionType" asp-items="ViewBag.TransactionTypes" class="form-select"></select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Direction" class="form-label">Direction *</label>
                            <select asp-for="Direction" asp-items="ViewBag.Directions" class="form-select"></select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerAccount" class="form-label">Customer *</label>
                        <select asp-for="CustomerAccount" asp-items="ViewBag.Customers" class="form-select">
                            <option value="">-- Select Customer --</option>
                        </select>
                        <span asp-validation-for="CustomerAccount" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="OriginCountry" class="form-label">Origin Country</label>
                            <input asp-for="OriginCountry" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DestinationCountry" class="form-label">Destination Country</label>
                            <input asp-for="DestinationCountry" class="form-control" placeholder="Leave empty for domestic" />
                            <small class="text-muted">Fill for cross-border transactions</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TransactionDate" class="form-label">Transaction Date *</label>
                        <input asp-for="TransactionDate" type="datetime-local" class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Line Items -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Line Items</h5>
                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="addLine()">
                        <i class="bi bi-plus"></i> Add Line
                    </button>
                </div>
                <div class="card-body">
                    <div id="linesContainer">
                        @for (var i = 0; i < Model.Lines.Count; i++)
                        {
                            <div class="line-item border rounded p-3 mb-3" data-index="@i">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6>Line @(i + 1)</h6>
                                    @if (i > 0)
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeLine(this)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    }
                                </div>

                                <div class="mb-2">
                                    <label class="form-label">Substance *</label>
                                    <select name="Lines[@i].SubstanceId" class="form-select substance-select" required>
                                        <option value="">-- Select Substance --</option>
                                        @foreach (var substance in (List<RE2.ComplianceCore.Models.ControlledSubstance>)ViewBag.Substances)
                                        {
                                            var isSelected = Model.Lines[i].SubstanceId == substance.SubstanceId;
                                            <option value="@substance.SubstanceId"
                                                    data-code="@substance.InternalCode"
                                                    selected="@isSelected">
                                                @substance.SubstanceName (@substance.InternalCode)
                                            </option>
                                        }
                                    </select>
                                    <input type="hidden" name="Lines[@i].SubstanceCode" class="substance-code" value="@Model.Lines[i].SubstanceCode" />
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">Quantity (g) *</label>
                                        <input type="number" name="Lines[@i].Quantity" class="form-control" step="0.01" min="0.01" value="@Model.Lines[i].Quantity" required />
                                    </div>
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">Product Code</label>
                                        <input type="text" name="Lines[@i].ProductCode" class="form-control" value="@Model.Lines[i].ProductCode" />
                                    </div>
                                </div>
                                <input type="hidden" name="Lines[@i].BaseUnitQuantity" class="base-quantity" value="@Model.Lines[i].BaseUnitQuantity" />
                                <input type="hidden" name="Lines[@i].BaseUnit" value="g" />
                                <input type="hidden" name="Lines[@i].UnitOfMeasure" value="EA" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end">
        <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> Validate Transaction
        </button>
    </div>
</form>

@section Scripts {
    <script>
        var lineIndex = @Model.Lines.Count;
        var substances = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(((List<RE2.ComplianceCore.Models.ControlledSubstance>)ViewBag.Substances).Select(s => new { id = s.SubstanceId, name = s.SubstanceName, code = s.InternalCode })));

        function addLine() {
            var container = document.getElementById('linesContainer');
            var substanceOptions = substances.map(s =>
                `<option value="${s.id}" data-code="${s.code}">${s.name} (${s.code})</option>`
            ).join('');

            var html = `
                <div class="line-item border rounded p-3 mb-3" data-index="${lineIndex}">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6>Line ${lineIndex + 1}</h6>
                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeLine(this)">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Substance *</label>
                        <select name="Lines[${lineIndex}].SubstanceId" class="form-select substance-select" required>
                            <option value="">-- Select Substance --</option>
                            ${substanceOptions}
                        </select>
                        <input type="hidden" name="Lines[${lineIndex}].SubstanceCode" class="substance-code" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Quantity (g) *</label>
                            <input type="number" name="Lines[${lineIndex}].Quantity" class="form-control" step="0.01" min="0.01" value="100" required />
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Product Code</label>
                            <input type="text" name="Lines[${lineIndex}].ProductCode" class="form-control" />
                        </div>
                    </div>
                    <input type="hidden" name="Lines[${lineIndex}].BaseUnitQuantity" class="base-quantity" value="100" />
                    <input type="hidden" name="Lines[${lineIndex}].BaseUnit" value="g" />
                    <input type="hidden" name="Lines[${lineIndex}].UnitOfMeasure" value="EA" />
                </div>
            `;
            container.insertAdjacentHTML('beforeend', html);
            lineIndex++;
        }

        function removeLine(button) {
            button.closest('.line-item').remove();
            updateLineNumbers();
        }

        function updateLineNumbers() {
            document.querySelectorAll('.line-item').forEach((item, index) => {
                item.querySelector('h6').textContent = `Line ${index + 1}`;
            });
        }

        // Update substance code when substance is selected
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('substance-select')) {
                var selected = e.target.options[e.target.selectedIndex];
                var codeInput = e.target.closest('.line-item').querySelector('.substance-code');
                codeInput.value = selected.dataset.code || '';
            }
        });

        // Update base quantity when quantity changes
        document.addEventListener('input', function(e) {
            if (e.target.name && e.target.name.includes('Quantity')) {
                var baseInput = e.target.closest('.line-item').querySelector('.base-quantity');
                baseInput.value = e.target.value;
            }
        });
    </script>
}
