@model RE2.ComplianceWeb.Controllers.GdpRecordVerificationViewModel
@{
    ViewData["Title"] = "Record Verification";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">GDP Credentials</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.CredentialId">@Model.CredentialNumber</a></li>
            <li class="breadcrumb-item active">Record Verification</li>
        </ol>
    </nav>

    <h1><i class="bi bi-patch-check"></i> Record Verification</h1>

    <!-- Credential Summary Card -->
    <div class="card mt-3 mb-3">
        <div class="card-header"><h5 class="mb-0">Credential: @Model.CredentialNumber</h5></div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Entity</dt>
                <dd class="col-sm-9">@Model.EntityName</dd>

                <dt class="col-sm-3">Credential</dt>
                <dd class="col-sm-9"><code>@Model.CredentialNumber</code></dd>

                <dt class="col-sm-3">Last Verified</dt>
                <dd class="col-sm-9">
                    @if (Model.LastVerificationDate.HasValue)
                    {
                        @Model.LastVerificationDate.Value.ToString("yyyy-MM-dd")
                    }
                    else
                    {
                        <span class="text-muted">Never verified</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="RecordVerification" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CredentialId" />
        <input type="hidden" asp-for="CredentialNumber" />
        <input type="hidden" asp-for="EntityName" />
        <input type="hidden" asp-for="LastVerificationDate" />

        <div class="card" style="max-width: 600px;">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="VerificationDate" class="form-label">Verification Date <span class="text-danger">*</span></label>
                    <input asp-for="VerificationDate" type="date" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="VerificationMethod" class="form-label">Verification Method <span class="text-danger">*</span></label>
                    <select asp-for="VerificationMethod" asp-items="@(ViewBag.VerificationMethods as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)"
                            class="form-select" required></select>
                </div>

                <div class="mb-3">
                    <label asp-for="VerifiedBy" class="form-label">Verified By <span class="text-danger">*</span></label>
                    <input asp-for="VerifiedBy" class="form-control" required
                           placeholder="Name of person who performed verification" />
                </div>

                <div class="mb-3">
                    <label asp-for="Outcome" class="form-label">Outcome <span class="text-danger">*</span></label>
                    <select asp-for="Outcome" asp-items="@(ViewBag.VerificationOutcomes as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)"
                            class="form-select" required></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="4"
                              placeholder="Additional verification details or observations..."></textarea>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-patch-check"></i> Record Verification
            </button>
            <a asp-action="Details" asp-route-id="@Model.CredentialId" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
