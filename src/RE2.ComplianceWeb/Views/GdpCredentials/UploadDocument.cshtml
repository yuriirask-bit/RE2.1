@model RE2.ComplianceWeb.Controllers.GdpUploadDocumentViewModel
@{
    ViewData["Title"] = "Upload Document";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">GDP Credentials</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.OwnerEntityId">@Model.CredentialNumber</a></li>
            <li class="breadcrumb-item active">Upload Document</li>
        </ol>
    </nav>

    <h1><i class="bi bi-upload"></i> Upload Document</h1>

    <!-- Credential Summary Card -->
    <div class="card mt-3 mb-3">
        <div class="card-header"><h5 class="mb-0">Credential: @Model.CredentialNumber</h5></div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Entity</dt>
                <dd class="col-sm-9">@Model.EntityName</dd>

                <dt class="col-sm-3">Credential</dt>
                <dd class="col-sm-9"><code>@Model.CredentialNumber</code></dd>
            </dl>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="UploadDocument" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="OwnerEntityType" />
        <input type="hidden" asp-for="OwnerEntityId" />
        <input type="hidden" asp-for="CredentialNumber" />
        <input type="hidden" asp-for="EntityName" />

        <div class="card" style="max-width: 600px;">
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="DocumentType" class="form-label">Document Type <span class="text-danger">*</span></label>
                    <select asp-for="DocumentType" asp-items="@(ViewBag.DocumentTypes as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)"
                            class="form-select" required></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"
                              placeholder="Optional description of the document..."></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="File" class="form-label">File <span class="text-danger">*</span></label>
                    <input asp-for="File" type="file" class="form-control" required
                           accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.tiff" />
                    <div class="form-text">
                        Accepted formats: PDF, DOC, DOCX, JPG, JPEG, PNG, TIFF. Maximum file size: 50 MB.
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-upload"></i> Upload Document
            </button>
            <a asp-action="Details" asp-route-id="@Model.OwnerEntityId" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
