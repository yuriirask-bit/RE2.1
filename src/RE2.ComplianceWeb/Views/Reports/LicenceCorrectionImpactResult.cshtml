@model RE2.ComplianceCore.Services.Reporting.LicenceCorrectionImpactReport
@{
    ViewData["Title"] = "Licence Correction Impact Results";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Correction Impact: @Model.LicenceNumber</h1>
            <p class="text-muted mb-0">
                Analysis period: @Model.AnalysisFromDate.ToString("yyyy-MM-dd") to @Model.AnalysisToDate.ToString("yyyy-MM-dd")
            </p>
        </div>
        <div>
            <a asp-action="LicenceCorrectionImpact" class="btn btn-outline-warning">
                <i class="bi bi-arrow-clockwise"></i> New Analysis
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to Reports
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle">Transactions Analyzed</h6>
                    <h2 class="card-title mb-0">@Model.TotalTransactionsAnalyzed</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card @(Model.TotalAffectedTransactions > 0 ? "bg-warning text-dark" : "bg-success text-white")">
                <div class="card-body">
                    <h6 class="card-subtitle">Affected Transactions</h6>
                    <h2 class="card-title mb-0">@Model.TotalAffectedTransactions</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card @(Model.CriticalImpactCount > 0 ? "bg-danger" : "bg-success") text-white">
                <div class="card-body">
                    <h6 class="card-subtitle">Critical Impact</h6>
                    <h2 class="card-title mb-0">@Model.CriticalImpactCount</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card @(Model.MajorImpactCount > 0 ? "bg-warning text-dark" : "bg-success text-white")">
                <div class="card-body">
                    <h6 class="card-subtitle">Major Impact</h6>
                    <h2 class="card-title mb-0">@Model.MajorImpactCount</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Correction Details -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Correction Details</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (Model.OriginalEffectiveDate.HasValue || Model.CorrectedEffectiveDate.HasValue)
                    {
                        <h6>Effective Date Change</h6>
                        <p class="mb-2">
                            <span class="text-decoration-line-through text-danger">@(Model.OriginalEffectiveDate?.ToString("yyyy-MM-dd") ?? "N/A")</span>
                            <i class="bi bi-arrow-right mx-2"></i>
                            <span class="text-success fw-bold">@(Model.CorrectedEffectiveDate?.ToString("yyyy-MM-dd") ?? "N/A")</span>
                        </p>
                    }
                </div>
                <div class="col-md-6">
                    @if (Model.OriginalExpiryDate.HasValue || Model.CorrectedExpiryDate.HasValue)
                    {
                        <h6>Expiry Date Change</h6>
                        <p class="mb-2">
                            <span class="text-decoration-line-through text-danger">@(Model.OriginalExpiryDate?.ToString("yyyy-MM-dd") ?? "N/A")</span>
                            <i class="bi bi-arrow-right mx-2"></i>
                            <span class="text-success fw-bold">@(Model.CorrectedExpiryDate?.ToString("yyyy-MM-dd") ?? "N/A")</span>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.CriticalImpactCount > 0)
    {
        <div class="alert alert-danger">
            <h5><i class="bi bi-exclamation-octagon me-2"></i>Compliance Breach Detected</h5>
            <p class="mb-0">@Model.CriticalImpactCount transaction(s) were approved but should have been blocked based on the corrected licence dates. These require immediate compliance review.</p>
        </div>
    }

    @if (!Model.AffectedTransactions.Any())
    {
        <div class="alert alert-success">
            <h5><i class="bi bi-check-circle me-2"></i>No Impact Detected</h5>
            <p class="mb-0">The licence date correction does not affect any historical transactions. All previous compliance decisions remain valid.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Affected Transactions</h5>
                    <span class="badge bg-warning text-dark">@Model.AffectedTransactions.Count transactions</span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Transaction ID</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Original Status</th>
                                <th>Corrected Status</th>
                                <th>Impact</th>
                                <th>Review</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.AffectedTransactions.OrderByDescending(t => t.ImpactSeverity).ThenByDescending(t => t.TransactionDate))
                            {
                                var impactClass = transaction.ImpactSeverity switch
                                {
                                    RE2.ComplianceCore.Services.Reporting.ImpactSeverity.Critical => "bg-danger",
                                    RE2.ComplianceCore.Services.Reporting.ImpactSeverity.Major => "bg-warning text-dark",
                                    RE2.ComplianceCore.Services.Reporting.ImpactSeverity.Minor => "bg-info",
                                    _ => "bg-secondary"
                                };

                                var originalClass = transaction.OriginalStatus switch
                                {
                                    "Passed" => "bg-success",
                                    "Failed" => "bg-danger",
                                    _ => "bg-secondary"
                                };

                                var correctedClass = transaction.CorrectedStatus switch
                                {
                                    "Passed" => "bg-success",
                                    "Failed" => "bg-danger",
                                    _ => "bg-secondary"
                                };

                                <tr class="@(transaction.ImpactSeverity == RE2.ComplianceCore.Services.Reporting.ImpactSeverity.Critical ? "table-danger" : "")">
                                    <td>
                                        <a asp-controller="Transactions" asp-action="Details" asp-route-id="@transaction.TransactionId">
                                            @transaction.ExternalTransactionId
                                        </a>
                                    </td>
                                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.CustomerName))
                                        {
                                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@transaction.CustomerId">
                                                @transaction.CustomerName
                                            </a>
                                        }
                                        else
                                        {
                                            @transaction.CustomerId.ToString().Substring(0, 8)
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @originalClass">@transaction.OriginalStatus</span>
                                    </td>
                                    <td>
                                        <span class="badge @correctedClass">@transaction.CorrectedStatus</span>
                                    </td>
                                    <td>
                                        <span class="badge @impactClass">@transaction.ImpactSeverity</span>
                                    </td>
                                    <td>
                                        @if (transaction.RequiresReview)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-flag"></i> Required
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                <tr class="@(transaction.ImpactSeverity == RE2.ComplianceCore.Services.Reporting.ImpactSeverity.Critical ? "table-danger" : "")">
                                    <td colspan="7" class="small text-muted ps-4">
                                        <i class="bi bi-info-circle me-1"></i>@transaction.ImpactDetails
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
