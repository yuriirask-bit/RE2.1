@model RE2.ComplianceWeb.Controllers.LicenceUsageReportViewModel
@{
    ViewData["Title"] = "Licence Usage Report";
    var licences = (IEnumerable<RE2.ComplianceCore.Models.Licence>)ViewBag.Licences;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Licence Usage Report</h1>
            <p class="text-muted mb-0">Track licence utilization and transaction coverage (FR-026)</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reports
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Report Criteria</h5>
        </div>
        <div class="card-body">
            <form asp-action="LicenceUsage" method="post">
                @Html.AntiForgeryToken()

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FromDate" class="form-label">From Date <span class="text-danger">*</span></label>
                        <input asp-for="FromDate" type="date" class="form-control" required />
                        <span asp-validation-for="FromDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ToDate" class="form-label">To Date <span class="text-danger">*</span></label>
                        <input asp-for="ToDate" type="date" class="form-control" required />
                        <span asp-validation-for="ToDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="LicenceId" class="form-label">Filter by Licence</label>
                        <select asp-for="LicenceId" class="form-select">
                            <option value="">All Licences</option>
                            @foreach (var licence in licences.OrderBy(l => l.LicenceNumber))
                            {
                                <option value="@licence.LicenceId">@licence.LicenceNumber (@licence.IssuingAuthority)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="HolderType" class="form-label">Filter by Holder Type</label>
                        <select asp-for="HolderType" class="form-select">
                            <option value="">All Types</option>
                            <option value="Customer">Customer</option>
                            <option value="Company">Company</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-file-earmark-text"></i> Generate Report
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
