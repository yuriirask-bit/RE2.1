@model RE2.ComplianceCore.Services.Reporting.LicenceUsageReport
@{
    ViewData["Title"] = "Licence Usage Report Results";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Licence Usage Report</h1>
            <p class="text-muted mb-0">
                @Model.FromDate.ToString("yyyy-MM-dd") to @Model.ToDate.ToString("yyyy-MM-dd")
            </p>
        </div>
        <div>
            <a asp-action="LicenceUsage" class="btn btn-outline-success">
                <i class="bi bi-arrow-clockwise"></i> New Report
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to Reports
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-subtitle">Total Licences</h6>
                    <h2 class="card-title mb-0">@Model.TotalLicences</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle">Total Transactions</h6>
                    <h2 class="card-title mb-0">@Model.TotalTransactions</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle">Generated</h6>
                    <h5 class="card-title mb-0">@Model.GeneratedDate.ToString("yyyy-MM-dd HH:mm")</h5>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.LicenceUsages.Any())
    {
        <div class="alert alert-info">
            <h5>No Licence Usage Data</h5>
            <p class="mb-0">There is no licence usage data for the selected date range and filters.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Licence Usage Details</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Licence Number</th>
                                <th>Issuing Authority</th>
                                <th>Status</th>
                                <th>Expiry</th>
                                <th class="text-end">Transactions</th>
                                <th class="text-end">Quantity Processed</th>
                                <th>Last Used</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usage in Model.LicenceUsages.OrderByDescending(u => u.TransactionCount))
                            {
                                var statusClass = usage.Status switch
                                {
                                    "Valid" => "bg-success",
                                    "Expired" => "bg-danger",
                                    "Suspended" => "bg-warning text-dark",
                                    _ => "bg-secondary"
                                };

                                <tr>
                                    <td>
                                        <a asp-controller="Licences" asp-action="Details" asp-route-id="@usage.LicenceId">
                                            @usage.LicenceNumber
                                        </a>
                                    </td>
                                    <td>@usage.IssuingAuthority</td>
                                    <td>
                                        <span class="badge @statusClass">@usage.Status</span>
                                    </td>
                                    <td>
                                        @if (usage.ExpiryDate.HasValue)
                                        {
                                            @usage.ExpiryDate.Value.ToString("yyyy-MM-dd")
                                        }
                                        else
                                        {
                                            <span class="text-muted">No expiry</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (usage.TransactionCount > 0)
                                        {
                                            <span class="badge bg-primary">@usage.TransactionCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-end">@usage.TotalQuantityProcessed.ToString("N2")</td>
                                    <td>
                                        @if (usage.LastUsedDate.HasValue)
                                        {
                                            @usage.LastUsedDate.Value.ToString("yyyy-MM-dd")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Never</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
