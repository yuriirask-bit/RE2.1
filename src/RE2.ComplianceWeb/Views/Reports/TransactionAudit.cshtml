@model RE2.ComplianceWeb.Controllers.TransactionAuditReportViewModel
@{
    ViewData["Title"] = "Transaction Audit Report";
    var customers = (IEnumerable<RE2.ComplianceCore.Models.Customer>)ViewBag.Customers;
    var substances = (IEnumerable<RE2.ComplianceCore.Models.ControlledSubstance>)ViewBag.Substances;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Transaction Audit Report</h1>
            <p class="text-muted mb-0">Generate transaction audit reports by substance, customer, or country (FR-026)</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reports
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Report Criteria</h5>
        </div>
        <div class="card-body">
            <form asp-action="TransactionAudit" method="post">
                @Html.AntiForgeryToken()

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FromDate" class="form-label">From Date <span class="text-danger">*</span></label>
                        <input asp-for="FromDate" type="date" class="form-control" required />
                        <span asp-validation-for="FromDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ToDate" class="form-label">To Date <span class="text-danger">*</span></label>
                        <input asp-for="ToDate" type="date" class="form-control" required />
                        <span asp-validation-for="ToDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="SubstanceId" class="form-label">Filter by Substance</label>
                        <select asp-for="SubstanceId" class="form-select">
                            <option value="">All Substances</option>
                            @foreach (var substance in substances.OrderBy(s => s.InternalCode))
                            {
                                <option value="@substance.SubstanceId">@substance.InternalCode - @substance.SubstanceName</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Filter by Customer</label>
                        <select name="customerSelection" id="txnAuditCustomerSelection" class="form-select">
                            <option value="">All Customers</option>
                            @foreach (var customer in customers.Where(c => c.IsComplianceConfigured).OrderBy(c => c.BusinessName))
                            {
                                <option value="@customer.CustomerAccount|@customer.DataAreaId">@customer.BusinessName</option>
                            }
                        </select>
                        <input type="hidden" asp-for="CustomerAccount" id="txnAuditCustomerAccount" />
                        <input type="hidden" asp-for="CustomerDataAreaId" id="txnAuditCustomerDataAreaId" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CountryCode" class="form-label">Filter by Country</label>
                        <select asp-for="CountryCode" class="form-select">
                            <option value="">All Countries</option>
                            <option value="NL">Netherlands (NL)</option>
                            <option value="BE">Belgium (BE)</option>
                            <option value="DE">Germany (DE)</option>
                            <option value="FR">France (FR)</option>
                            <option value="GB">United Kingdom (GB)</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IncludeLicenceDetails" class="form-check-input" type="checkbox" />
                        <label asp-for="IncludeLicenceDetails" class="form-check-label">Include licence details for each transaction</label>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-file-earmark-text"></i> Generate Report
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('txnAuditCustomerSelection').addEventListener('change', function() {
            var parts = this.value.split('|');
            document.getElementById('txnAuditCustomerAccount').value = parts[0] || '';
            document.getElementById('txnAuditCustomerDataAreaId').value = parts[1] || '';
        });
    </script>
}
