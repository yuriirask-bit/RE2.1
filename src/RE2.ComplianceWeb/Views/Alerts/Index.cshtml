@model IEnumerable<RE2.ComplianceCore.Models.Alert>
@{
    ViewData["Title"] = "Alerts";
    var severityFilter = (RE2.ComplianceCore.Models.AlertSeverity?)ViewBag.SeverityFilter;
    var typeFilter = (RE2.ComplianceCore.Models.AlertType?)ViewBag.TypeFilter;
    var showAcknowledged = (bool)ViewBag.ShowAcknowledged;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Alerts</h1>
            <p class="text-muted mb-0">Manage compliance alerts for licences and customers</p>
        </div>
        <div>
            <a asp-action="BulkAcknowledge" class="btn btn-outline-success">
                <i class="bi bi-check2-all"></i> Bulk Acknowledge
            </a>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Severity</label>
                    <select name="severity" class="form-select">
                        <option value="">All Severities</option>
                        @foreach (var sev in Enum.GetValues<RE2.ComplianceCore.Models.AlertSeverity>())
                        {
                            <option value="@sev" selected="@(severityFilter == sev)">@sev</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Alert Type</label>
                    <select name="type" class="form-select">
                        <option value="">All Types</option>
                        @foreach (var t in Enum.GetValues<RE2.ComplianceCore.Models.AlertType>())
                        {
                            <option value="@t" selected="@(typeFilter == t)">@t</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="showAcknowledged" value="true" id="showAcknowledged" checked="@showAcknowledged" />
                        <label class="form-check-label" for="showAcknowledged">Show Acknowledged</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5>No Alerts Found</h5>
            <p class="mb-0">There are no alerts matching your filter criteria. @(showAcknowledged ? "" : "Try enabling 'Show Acknowledged' to see all alerts.")</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Alert List</h5>
                    <span class="badge bg-secondary">@Model.Count() alerts</span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 100px;">Severity</th>
                                <th style="width: 150px;">Type</th>
                                <th>Message</th>
                                <th style="width: 150px;">Generated</th>
                                <th style="width: 100px;">Status</th>
                                <th style="width: 120px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alert in Model.OrderByDescending(a => a.Severity).ThenByDescending(a => a.GeneratedDate))
                            {
                                var severityClass = alert.Severity switch
                                {
                                    RE2.ComplianceCore.Models.AlertSeverity.Critical => "bg-danger",
                                    RE2.ComplianceCore.Models.AlertSeverity.Warning => "bg-warning text-dark",
                                    RE2.ComplianceCore.Models.AlertSeverity.Info => "bg-info",
                                    _ => "bg-secondary"
                                };

                                var typeIcon = alert.AlertType switch
                                {
                                    RE2.ComplianceCore.Models.AlertType.LicenceExpiring => "bi-calendar-x",
                                    RE2.ComplianceCore.Models.AlertType.LicenceExpired => "bi-x-circle",
                                    RE2.ComplianceCore.Models.AlertType.ReVerificationDue => "bi-person-check",
                                    RE2.ComplianceCore.Models.AlertType.MissingDocumentation => "bi-file-earmark-x",
                                    _ => "bi-bell"
                                };

                                <tr class="@(alert.IsAcknowledged() ? "table-secondary" : "")">
                                    <td>
                                        <span class="badge @severityClass">@alert.Severity</span>
                                    </td>
                                    <td>
                                        <i class="bi @typeIcon me-1"></i>@alert.AlertType
                                    </td>
                                    <td>
                                        <strong>@alert.Message</strong>
                                        @if (!string.IsNullOrEmpty(alert.Details))
                                        {
                                            <br />
                                            <small class="text-muted">@alert.Details</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted">@alert.GeneratedDate.ToString("yyyy-MM-dd HH:mm")</span>
                                    </td>
                                    <td>
                                        @if (alert.IsAcknowledged())
                                        {
                                            <span class="badge bg-success">Acknowledged</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@alert.AlertId" class="btn btn-outline-secondary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (!alert.IsAcknowledged())
                                            {
                                                <form asp-action="Acknowledge" asp-route-id="@alert.AlertId" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-success" title="Acknowledge">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
