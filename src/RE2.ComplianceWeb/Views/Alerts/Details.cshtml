@model RE2.ComplianceCore.Models.Alert
@{
    ViewData["Title"] = "Alert Details";

    var severityClass = Model.Severity switch
    {
        RE2.ComplianceCore.Models.AlertSeverity.Critical => "bg-danger",
        RE2.ComplianceCore.Models.AlertSeverity.Warning => "bg-warning text-dark",
        RE2.ComplianceCore.Models.AlertSeverity.Info => "bg-info",
        _ => "bg-secondary"
    };

    var typeIcon = Model.AlertType switch
    {
        RE2.ComplianceCore.Models.AlertType.LicenceExpiring => "bi-calendar-x",
        RE2.ComplianceCore.Models.AlertType.LicenceExpired => "bi-x-circle",
        RE2.ComplianceCore.Models.AlertType.ReVerificationDue => "bi-person-check",
        RE2.ComplianceCore.Models.AlertType.MissingDocumentation => "bi-file-earmark-x",
        _ => "bi-bell"
    };
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Alerts</a></li>
            <li class="breadcrumb-item active" aria-current="page">Alert Details</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi @typeIcon me-2"></i>Alert Details</h5>
                    <span class="badge @severityClass">@Model.Severity</span>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h4>@Model.Message</h4>
                        @if (!string.IsNullOrEmpty(Model.Details))
                        {
                            <p class="text-muted">@Model.Details</p>
                        }
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Alert ID</dt>
                        <dd class="col-sm-8"><code>@Model.AlertId</code></dd>

                        <dt class="col-sm-4">Alert Type</dt>
                        <dd class="col-sm-8">@Model.AlertType</dd>

                        <dt class="col-sm-4">Severity</dt>
                        <dd class="col-sm-8"><span class="badge @severityClass">@Model.Severity</span></dd>

                        <dt class="col-sm-4">Generated</dt>
                        <dd class="col-sm-8">@Model.GeneratedDate.ToString("yyyy-MM-dd HH:mm:ss") UTC</dd>

                        <dt class="col-sm-4">Target Entity</dt>
                        <dd class="col-sm-8">
                            @Model.TargetEntityType:
                            @if (Model.TargetEntityType == RE2.ComplianceCore.Models.TargetEntityType.Licence)
                            {
                                <a asp-controller="Licences" asp-action="Details" asp-route-id="@Model.TargetEntityId">
                                    @Model.TargetEntityId
                                </a>
                            }
                            else if (Model.TargetEntityType == RE2.ComplianceCore.Models.TargetEntityType.Customer)
                            {
                                <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.TargetEntityId">
                                    @Model.TargetEntityId
                                </a>
                            }
                            else
                            {
                                <span>@Model.TargetEntityId</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAcknowledged())
                            {
                                <span class="badge bg-success">Acknowledged</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </dd>

                        @if (Model.IsAcknowledged())
                        {
                            <dt class="col-sm-4">Acknowledged Date</dt>
                            <dd class="col-sm-8">@Model.AcknowledgedDate?.ToString("yyyy-MM-dd HH:mm:ss") UTC</dd>

                            <dt class="col-sm-4">Acknowledged By</dt>
                            <dd class="col-sm-8">@(Model.AcknowledgerName ?? Model.AcknowledgedBy?.ToString() ?? "Unknown")</dd>
                        }
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Alerts
                        </a>
                        @if (!Model.IsAcknowledged())
                        {
                            <form asp-action="Acknowledge" asp-route-id="@Model.AlertId" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-lg"></i> Acknowledge Alert
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Actions</h6>
                </div>
                <div class="card-body">
                    @if (Model.TargetEntityType == RE2.ComplianceCore.Models.TargetEntityType.Licence)
                    {
                        <div class="d-grid gap-2">
                            <a asp-controller="Licences" asp-action="Details" asp-route-id="@Model.TargetEntityId" class="btn btn-outline-primary">
                                <i class="bi bi-file-earmark-text"></i> View Licence
                            </a>
                            @if (Model.AlertType == RE2.ComplianceCore.Models.AlertType.LicenceExpiring || Model.AlertType == RE2.ComplianceCore.Models.AlertType.LicenceExpired)
                            {
                                <a asp-controller="Licences" asp-action="Edit" asp-route-id="@Model.TargetEntityId" class="btn btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit Licence
                                </a>
                            }
                        </div>
                    }
                    else if (Model.TargetEntityType == RE2.ComplianceCore.Models.TargetEntityType.Customer)
                    {
                        <div class="d-grid gap-2">
                            <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.TargetEntityId" class="btn btn-outline-primary">
                                <i class="bi bi-person"></i> View Customer
                            </a>
                            @if (Model.AlertType == RE2.ComplianceCore.Models.AlertType.ReVerificationDue)
                            {
                                <a asp-controller="Customers" asp-action="VerifyCustomer" asp-route-id="@Model.TargetEntityId" class="btn btn-outline-info">
                                    <i class="bi bi-check-circle"></i> Re-verify Customer
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Response Guidelines</h6>
                </div>
                <div class="card-body small">
                    @switch (Model.AlertType)
                    {
                        case RE2.ComplianceCore.Models.AlertType.LicenceExpiring:
                            <p><strong>Licence Expiring:</strong></p>
                            <ul>
                                <li>Contact the licence holder about renewal</li>
                                <li>Begin renewal process with issuing authority</li>
                                <li>Update licence records when renewed</li>
                            </ul>
                            break;
                        case RE2.ComplianceCore.Models.AlertType.LicenceExpired:
                            <p><strong>Licence Expired:</strong></p>
                            <ul class="text-danger">
                                <li>Immediately suspend related transactions</li>
                                <li>Contact licence holder urgently</li>
                                <li>Escalate to compliance management</li>
                            </ul>
                            break;
                        case RE2.ComplianceCore.Models.AlertType.ReVerificationDue:
                            <p><strong>Re-verification Due:</strong></p>
                            <ul>
                                <li>Review customer qualification status</li>
                                <li>Request updated documentation</li>
                                <li>Schedule re-verification review</li>
                            </ul>
                            break;
                        default:
                            <p>Review the alert details and take appropriate action.</p>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
</div>
