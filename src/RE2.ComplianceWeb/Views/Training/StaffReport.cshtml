@model RE2.ComplianceWeb.Controllers.StaffTrainingReportViewModel
@{
    ViewData["Title"] = $"Training Report - {Model.StaffMemberName}";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Training Records</a></li>
            <li class="breadcrumb-item active">Staff Report</li>
        </ol>
    </nav>

    <h1><i class="bi bi-person-lines-fill"></i> Training Report: @Model.StaffMemberName</h1>

    <div class="row mb-4 mt-3">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.Records.Count</h3>
                    <p class="text-muted">Total Trainings</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h3 class="text-success">@Model.Records.Count(r => r.AssessmentResult == RE2.ComplianceCore.Models.AssessmentResult.Pass)</h3>
                    <p class="text-muted">Passed</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h3 class="text-warning">@Model.ExpiredCount</h3>
                    <p class="text-muted">Expired</p>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Curriculum</th>
                <th>Completion Date</th>
                <th>Expiry Date</th>
                <th>Trainer</th>
                <th>Assessment</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.Records.OrderByDescending(r => r.CompletionDate))
            {
                <tr class="@(record.IsExpired() ? "table-warning" : "")">
                    <td>@record.TrainingCurriculum</td>
                    <td>@record.CompletionDate.ToString("yyyy-MM-dd")</td>
                    <td>@(record.ExpiryDate?.ToString("yyyy-MM-dd") ?? "—")</td>
                    <td>@(record.TrainerName ?? "—")</td>
                    <td>
                        @switch (record.AssessmentResult)
                        {
                            case RE2.ComplianceCore.Models.AssessmentResult.Pass:
                                <span class="badge bg-success">Pass</span>
                                break;
                            case RE2.ComplianceCore.Models.AssessmentResult.Fail:
                                <span class="badge bg-danger">Fail</span>
                                break;
                            case RE2.ComplianceCore.Models.AssessmentResult.NotAssessed:
                                <span class="badge bg-secondary">Not Assessed</span>
                                break;
                        }
                    </td>
                    <td>
                        @if (record.IsExpired())
                        {
                            <span class="badge bg-warning text-dark">Expired</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Current</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to All Records
        </a>
    </div>
</div>
