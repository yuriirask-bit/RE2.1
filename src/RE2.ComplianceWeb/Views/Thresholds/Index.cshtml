@model IEnumerable<RE2.ComplianceCore.Models.Threshold>
@using static RE2.Shared.Constants.TransactionTypes
@{
    ViewData["Title"] = "Threshold Configuration";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Threshold Configuration</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Threshold
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h6 class="mb-0">Filter Thresholds</h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="type" class="form-label">Threshold Type</label>
                    <select name="type" id="type" class="form-select">
                        <option value="">All Types</option>
                        @foreach (var thresholdType in Enum.GetValues<ThresholdType>())
                        {
                            var isSelected = ViewBag.TypeFilter != null && (ThresholdType)ViewBag.TypeFilter == thresholdType;
                            <option value="@((int)thresholdType)" selected="@isSelected">@thresholdType</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" name="search" id="search" class="form-control" placeholder="Name, description, or substance..." value="@ViewBag.SearchTerm">
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" name="showInactive" value="true" id="showInactive"
                               @(ViewBag.ShowInactive == true ? "checked" : "")>
                        <label class="form-check-label" for="showInactive">Show Inactive</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-search"></i> Filter
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>
                <i class="bi bi-sliders"></i> Threshold Rules
                <span class="badge bg-secondary">@Model.Count() thresholds</span>
            </span>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-3">No thresholds found matching the criteria.</p>
                </div>
            }
            else
            {
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Period</th>
                            <th>Limit</th>
                            <th>Scope</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var threshold in Model)
                        {
                            var typeClass = threshold.ThresholdType switch
                            {
                                ThresholdType.Quantity => "bg-primary",
                                ThresholdType.CumulativeQuantity => "bg-info",
                                ThresholdType.Frequency => "bg-warning text-dark",
                                ThresholdType.Value => "bg-success",
                                _ => "bg-secondary"
                            };

                            <tr class="@(!threshold.IsActive ? "table-secondary" : "")">
                                <td>
                                    <strong>@threshold.Name</strong>
                                    @if (!string.IsNullOrEmpty(threshold.Description))
                                    {
                                        <br><small class="text-muted">@threshold.Description</small>
                                    }
                                </td>
                                <td><span class="badge @typeClass">@threshold.ThresholdType</span></td>
                                <td>@threshold.Period</td>
                                <td>
                                    <strong>@threshold.LimitValue.ToString("N2")</strong> @threshold.LimitUnit
                                    <br><small class="text-muted">Warning at @threshold.WarningThresholdPercent%</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(threshold.SubstanceName))
                                    {
                                        <span class="badge bg-light text-dark">@threshold.SubstanceName</span>
                                    }
                                    @if (threshold.CustomerCategory.HasValue)
                                    {
                                        <span class="badge bg-light text-dark">@threshold.CustomerCategory</span>
                                    }
                                    @if (!string.IsNullOrEmpty(threshold.OpiumActList))
                                    {
                                        <span class="badge bg-light text-dark">@threshold.OpiumActList</span>
                                    }
                                    @if (string.IsNullOrEmpty(threshold.SubstanceCode) && !threshold.CustomerCategory.HasValue && string.IsNullOrEmpty(threshold.OpiumActList))
                                    {
                                        <span class="text-muted">All</span>
                                    }
                                </td>
                                <td>
                                    @if (threshold.IsActive)
                                    {
                                        if (threshold.IsEffective())
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Scheduled</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                    @if (threshold.AllowOverride)
                                    {
                                        <br><small class="text-muted"><i class="bi bi-shield-check"></i> Override allowed</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@threshold.Id"
                                           class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@threshold.Id"
                                           class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="ToggleActive" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@threshold.Id" />
                                            @if (threshold.IsActive)
                                            {
                                                <button type="submit" class="btn btn-outline-warning" title="Deactivate"
                                                        onclick="return confirm('Are you sure you want to deactivate this threshold?');">
                                                    <i class="bi bi-pause-circle"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-outline-success" title="Activate">
                                                    <i class="bi bi-play-circle"></i>
                                                </button>
                                            }
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div class="mt-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="card-title">Threshold Types Reference</h6>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="small mb-0">
                            <li><span class="badge bg-primary">Quantity</span> - Maximum quantity per transaction</li>
                            <li><span class="badge bg-info">CumulativeQuantity</span> - Total quantity over time period</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="small mb-0">
                            <li><span class="badge bg-warning text-dark">Frequency</span> - Maximum number of transactions</li>
                            <li><span class="badge bg-success">Value</span> - Maximum monetary value</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
