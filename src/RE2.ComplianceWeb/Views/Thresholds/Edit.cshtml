@model RE2.ComplianceWeb.Controllers.ThresholdEditViewModel
@using static RE2.Shared.Constants.TransactionTypes
@{
    ViewData["Title"] = $"Edit: {Model.Name}";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Threshold</h1>
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="bi bi-eye"></i> View Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <!-- Basic Information -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ThresholdType" class="form-label">Type *</label>
                                <select asp-for="ThresholdType" asp-items="@((List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ThresholdTypes)" class="form-select"></select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Period" class="form-label">Period *</label>
                                <select asp-for="Period" asp-items="@((List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ThresholdPeriods)" class="form-select"></select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegulatoryReference" class="form-label">Regulatory Reference</label>
                            <input asp-for="RegulatoryReference" class="form-control" />
                        </div>
                    </div>
                </div>

                <!-- Limit Configuration -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Limit Configuration</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="LimitValue" class="form-label">Limit Value *</label>
                                <input asp-for="LimitValue" type="number" step="0.01" min="0.01" class="form-control" />
                                <span asp-validation-for="LimitValue" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="LimitUnit" class="form-label">Unit *</label>
                                <select asp-for="LimitUnit" class="form-select">
                                    <option value="g">Grams (g)</option>
                                    <option value="mg">Milligrams (mg)</option>
                                    <option value="kg">Kilograms (kg)</option>
                                    <option value="count">Count</option>
                                    <option value="EUR">Euro (EUR)</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="WarningThresholdPercent" class="form-label">Warning at %</label>
                                <input asp-for="WarningThresholdPercent" type="number" step="1" min="0" max="100" class="form-control" />
                                <small class="text-muted">Triggers warning when reached</small>
                            </div>
                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="AllowOverride" class="form-check-input" type="checkbox" id="allowOverride" />
                                    <label class="form-check-label" for="allowOverride">
                                        Allow Override by Compliance Manager
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxOverridePercent" class="form-label">Max Override %</label>
                                <input asp-for="MaxOverridePercent" type="number" step="1" min="101" class="form-control" />
                                <small class="text-muted">Leave empty for unlimited override</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Scope -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Scope (Optional Filters)</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small">Leave fields empty to apply threshold to all matching transactions.</p>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SubstanceId" class="form-label">Substance</label>
                                <select asp-for="SubstanceId" class="form-select">
                                    <option value="">All substances</option>
                                    @foreach (var substance in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Substances)
                                    {
                                        <option value="@substance.Value">@substance.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CustomerCategory" class="form-label">Customer Category</label>
                                <select asp-for="CustomerCategory" class="form-select">
                                    <option value="">All categories</option>
                                    @foreach (var category in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.CustomerCategories)
                                    {
                                        <option value="@category.Value">@category.Text</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OpiumActList" class="form-label">Opium Act List</label>
                            <select asp-for="OpiumActList" class="form-select">
                                <option value="">All lists</option>
                                <option value="ListI">List I (Hard Drugs)</option>
                                <option value="ListII">List II (Therapeutic)</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <!-- Status -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive" />
                            <label class="form-check-label" for="isActive">
                                Active
                            </label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EffectiveFrom" class="form-label">Effective From</label>
                            <input asp-for="EffectiveFrom" type="date" class="form-control" />
                            <small class="text-muted">Leave empty for immediate effect</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EffectiveTo" class="form-label">Effective To</label>
                            <input asp-for="EffectiveTo" type="date" class="form-control" />
                            <small class="text-muted">Leave empty for no end date</small>
                        </div>
                    </div>
                </div>

                <!-- Audit Info -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Audit Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="mb-0">
                            <dt>Created</dt>
                            <dd>@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>

                            @if (Model.ModifiedDate.HasValue)
                            {
                                <dt>Last Modified</dt>
                                <dd>@Model.ModifiedDate.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                            }
                        </dl>
                    </div>
                </div>

                <!-- Danger Zone -->
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Danger Zone</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger w-100"
                                    onclick="return confirm('Are you sure you want to delete this threshold? This action cannot be undone.');">
                                <i class="bi bi-trash"></i> Delete Threshold
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-end mb-4">
            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Save Changes
            </button>
        </div>
    </form>
</div>
