@model IEnumerable<RE2.ComplianceCore.Models.Licence>
@{
    ViewData["Title"] = "Licence Management";
}

<div class="container">
    <h1>Licence Management</h1>
    <p>View and manage controlled drug licences</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Licence
            </a>
            <a asp-action="Expiring" class="btn btn-warning">
                <i class="bi bi-exclamation-triangle"></i> Expiring Licences
            </a>
        </div>
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <select name="status" class="form-select me-2" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    <option value="Valid" selected="@(ViewBag.StatusFilter == "Valid")">Valid</option>
                    <option value="Expired" selected="@(ViewBag.StatusFilter == "Expired")">Expired</option>
                    <option value="Suspended" selected="@(ViewBag.StatusFilter == "Suspended")">Suspended</option>
                    <option value="Revoked" selected="@(ViewBag.StatusFilter == "Revoked")">Revoked</option>
                </select>
            </form>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Licence Number</th>
                <th>Licence Type</th>
                <th>Holder Type</th>
                <th>Issuing Authority</th>
                <th>Issue Date</th>
                <th>Expiry Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center">
                        <em>No licences found. Click "Create New Licence" to add one.</em>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var licence in Model)
                {
                    <tr>
                        <td>@licence.LicenceNumber</td>
                        <td>@(licence.LicenceType?.Name ?? "Unknown")</td>
                        <td>@licence.HolderType</td>
                        <td>@licence.IssuingAuthority</td>
                        <td>@licence.IssueDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (licence.ExpiryDate.HasValue)
                            {
                                <span class="@(licence.IsExpired() ? "text-danger fw-bold" : "")">
                                    @licence.ExpiryDate.Value.ToString("yyyy-MM-dd")
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">No expiry</span>
                            }
                        </td>
                        <td>
                            @{
                                var statusClass = licence.Status switch
                                {
                                    "Valid" => "bg-success",
                                    "Expired" => "bg-danger",
                                    "Suspended" => "bg-warning text-dark",
                                    "Revoked" => "bg-secondary",
                                    _ => "bg-info"
                                };
                            }
                            <span class="badge @statusClass">@licence.Status</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@licence.LicenceId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@licence.LicenceId" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@licence.LicenceId" method="post" style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this licence?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
