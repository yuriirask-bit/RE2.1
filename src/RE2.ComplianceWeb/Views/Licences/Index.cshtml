@{
    ViewData["Title"] = "Licence Management";
}

<div class="container">
    <h1>Licence Management</h1>
    <p>View and manage controlled drug licences</p>

    <div class="mb-3">
        <a href="/Licences/Create" class="btn btn-primary">Create New Licence</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Licence Number</th>
                <th>Type</th>
                <th>Customer</th>
                <th>Issue Date</th>
                <th>Expiry Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="7" class="text-center">
                    <em>Licence listing to be implemented (T076)</em>
                </td>
            </tr>
        </tbody>
    </table>
</div>
