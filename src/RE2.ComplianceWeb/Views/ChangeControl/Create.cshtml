@model RE2.ComplianceWeb.Controllers.ChangeCreateViewModel
@{
    ViewData["Title"] = "New Change Record";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Change Control</a></li>
            <li class="breadcrumb-item active">New Change Record</li>
        </ol>
    </nav>

    <h1><i class="bi bi-plus-circle"></i> New Change Record</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Create" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-header"><h5 class="mb-0">Change Details</h5></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ChangeNumber" class="form-label">Change Number <span class="text-danger">*</span></label>
                            <input asp-for="ChangeNumber" class="form-control" placeholder="e.g., CHG-2026-001" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ChangeType" class="form-label">Change Type <span class="text-danger">*</span></label>
                            <select asp-for="ChangeType" asp-items="@(ViewBag.ChangeTypes as SelectList)" class="form-select">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the change..." required></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RiskAssessment" class="form-label">Risk Assessment</label>
                            <textarea asp-for="RiskAssessment" class="form-control" rows="3" placeholder="Assess the GDP risk impact..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Create Change Record
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
