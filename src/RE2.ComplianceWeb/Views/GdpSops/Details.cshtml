@model RE2.ComplianceCore.Models.GdpSop
@{
    ViewData["Title"] = $"SOP - {Model.SopNumber}";
    var linkedSites = ViewBag.LinkedSites as List<RE2.ComplianceCore.Models.GdpSop> ?? new();
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">GDP SOPs</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1><i class="bi bi-file-earmark-text"></i> @Model.SopNumber â€” @Model.Title</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header"><h5 class="mb-0">SOP Information</h5></div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">SOP Number</dt>
                        <dd class="col-sm-7"><strong>@Model.SopNumber</strong></dd>

                        <dt class="col-sm-5">Title</dt>
                        <dd class="col-sm-7">@Model.Title</dd>

                        <dt class="col-sm-5">Category</dt>
                        <dd class="col-sm-7">
                            @switch (Model.Category)
                            {
                                case RE2.ComplianceCore.Models.GdpSopCategory.Returns:
                                    <span class="badge bg-primary">Returns</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.Recalls:
                                    <span class="badge bg-danger">Recalls</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.Deviations:
                                    <span class="badge bg-warning text-dark">Deviations</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.TemperatureExcursions:
                                    <span class="badge bg-info">Temp Excursions</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.OutsourcedActivities:
                                    <span class="badge bg-secondary">Outsourced</span>
                                    break;
                                default:
                                    <span class="badge bg-light text-dark">Other</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-5">Version</dt>
                        <dd class="col-sm-7">v@Model.Version</dd>

                        <dt class="col-sm-5">Effective Date</dt>
                        <dd class="col-sm-7">@Model.EffectiveDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-5">Status</dt>
                        <dd class="col-sm-7">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.DocumentUrl))
                        {
                            <dt class="col-sm-5">Document</dt>
                            <dd class="col-sm-7"><a href="@Model.DocumentUrl" target="_blank">View Document <i class="bi bi-box-arrow-up-right"></i></a></dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Linked Sites</h5>
                </div>
                <div class="card-body">
                    <form asp-action="LinkSite" method="post" class="mb-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="sopId" value="@Model.SopId" />
                        <div class="input-group">
                            <select name="siteId" asp-items="@(ViewBag.AvailableSites as SelectList)" class="form-select">
                                <option value="">-- Select Site --</option>
                            </select>
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-link-45deg"></i> Link
                            </button>
                        </div>
                    </form>

                    @if (!linkedSites.Any())
                    {
                        <p class="text-muted">No sites linked to this SOP.</p>
                    }
                    else
                    {
                        <p class="text-muted">@linkedSites.Count site(s) linked.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.SopId" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <form asp-action="Delete" asp-route-id="@Model.SopId" method="post" class="d-inline"
              onsubmit="return confirm('Are you sure you want to delete this SOP?');">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
