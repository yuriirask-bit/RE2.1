@model RE2.ComplianceWeb.Controllers.SopIndexViewModel
@{
    ViewData["Title"] = "GDP Standard Operating Procedures";
}

<div class="container">
    <h1><i class="bi bi-file-earmark-text"></i> GDP Standard Operating Procedures</h1>
    <p>Manage GDP-relevant SOPs for returns, recalls, deviations, and outsourced activities</p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add SOP
            </a>
            <a asp-action="Index" asp-route-activeOnly="true" class="btn btn-outline-success ms-2 @(Model.ActiveOnly ? "active" : "")">
                Active Only (@Model.ActiveCount)
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-1 @(!Model.ActiveOnly ? "active" : "")">
                All (@Model.TotalCount)
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>SOP Number</th>
                <th>Title</th>
                <th>Category</th>
                <th>Version</th>
                <th>Effective Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Sops.Any())
            {
                <tr>
                    <td colspan="7" class="text-center">
                        <em>No SOPs recorded yet. Click "Add SOP" to create one.</em>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var sop in Model.Sops.OrderBy(s => s.SopNumber))
                {
                    <tr>
                        <td><strong>@sop.SopNumber</strong></td>
                        <td>@sop.Title</td>
                        <td>
                            @switch (sop.Category)
                            {
                                case RE2.ComplianceCore.Models.GdpSopCategory.Returns:
                                    <span class="badge bg-primary">Returns</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.Recalls:
                                    <span class="badge bg-danger">Recalls</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.Deviations:
                                    <span class="badge bg-warning text-dark">Deviations</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.TemperatureExcursions:
                                    <span class="badge bg-info">Temp Excursions</span>
                                    break;
                                case RE2.ComplianceCore.Models.GdpSopCategory.OutsourcedActivities:
                                    <span class="badge bg-secondary">Outsourced</span>
                                    break;
                                default:
                                    <span class="badge bg-light text-dark">Other</span>
                                    break;
                            }
                        </td>
                        <td>v@sop.Version</td>
                        <td>@sop.EffectiveDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (sop.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@sop.SopId"
                               class="btn btn-sm btn-outline-primary" title="View Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@sop.SopId"
                               class="btn btn-sm btn-outline-secondary" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <div class="text-muted">
        Showing @Model.Sops.Count SOP(s)
    </div>
</div>
