@model RE2.ComplianceCore.Models.RegulatoryInspection
@{
    ViewData["Title"] = "Inspection Details";

    var outcomeClass = Model.Outcome switch
    {
        RE2.ComplianceCore.Models.InspectionOutcome.NoFindings => "bg-success",
        RE2.ComplianceCore.Models.InspectionOutcome.MinorFindings => "bg-info",
        RE2.ComplianceCore.Models.InspectionOutcome.MajorFindings => "bg-warning text-dark",
        RE2.ComplianceCore.Models.InspectionOutcome.CriticalFindings => "bg-danger",
        RE2.ComplianceCore.Models.InspectionOutcome.Pending => "bg-secondary",
        _ => "bg-secondary"
    };

    var authorityBadge = Model.Authority switch
    {
        RE2.ComplianceCore.Models.InspectingAuthority.IGJ => "bg-primary",
        RE2.ComplianceCore.Models.InspectingAuthority.Customs => "bg-info",
        RE2.ComplianceCore.Models.InspectingAuthority.NVWA => "bg-warning text-dark",
        RE2.ComplianceCore.Models.InspectingAuthority.Internal => "bg-secondary",
        _ => "bg-secondary"
    };
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Inspection Details</h1>
            <p class="text-muted mb-0">
                <span class="badge @authorityBadge">@Model.Authority</span>
                @Model.InspectionDate.ToString("yyyy-MM-dd")
                @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                {
                    <span class="ms-2">Ref: <code>@Model.ReferenceNumber</code></span>
                }
            </p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.InspectionId" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.AreCorrectiveActionsOverdue())
    {
        <div class="alert alert-danger">
            <h5><i class="bi bi-exclamation-octagon me-2"></i>Corrective Actions Overdue</h5>
            <p class="mb-0">The corrective actions for this inspection were due on @Model.CorrectiveActionsDueDate!.Value.ToString("yyyy-MM-dd") and have not been completed.</p>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Inspection Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Inspection Date</label>
                            <p class="mb-0 fw-bold">@Model.InspectionDate.ToString("dddd, d MMMM yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Inspecting Authority</label>
                            <p class="mb-0">
                                <span class="badge @authorityBadge fs-6">@Model.Authority</span>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Inspector</label>
                            <p class="mb-0 fw-bold">@Model.InspectorName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Reference Number</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                                {
                                    <code class="fs-6">@Model.ReferenceNumber</code>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Findings -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Findings</h5>
                    <span class="badge @outcomeClass fs-6">@Model.Outcome</span>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.FindingsSummary))
                    {
                        <p class="mb-0" style="white-space: pre-wrap;">@Model.FindingsSummary</p>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No findings recorded.</p>
                    }
                </div>
            </div>

            <!-- Corrective Actions -->
            @if (!string.IsNullOrEmpty(Model.CorrectiveActions) || Model.CorrectiveActionsDueDate.HasValue)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-tools me-2"></i>Corrective Actions</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.CorrectiveActions))
                        {
                            <p style="white-space: pre-wrap;">@Model.CorrectiveActions</p>
                        }

                        @if (Model.CorrectiveActionsDueDate.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Due Date</label>
                                    <p class="mb-0">
                                        @Model.CorrectiveActionsDueDate.Value.ToString("yyyy-MM-dd")
                                        @if (Model.AreCorrectiveActionsOverdue())
                                        {
                                            <span class="badge bg-danger ms-2">Overdue</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-muted">Completed Date</label>
                                    <p class="mb-0">
                                        @if (Model.CorrectiveActionsCompletedDate.HasValue)
                                        {
                                            @Model.CorrectiveActionsCompletedDate.Value.ToString("yyyy-MM-dd")
                                            <span class="badge bg-success ms-2">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not yet completed</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Notes -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-journal-text me-2"></i>Additional Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0" style="white-space: pre-wrap;">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Metadata -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Record Info</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <small class="text-muted">Created:</small><br />
                        @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm") UTC
                    </p>
                    <p class="mb-0">
                        <small class="text-muted">Last Modified:</small><br />
                        @Model.ModifiedDate.ToString("yyyy-MM-dd HH:mm") UTC
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
