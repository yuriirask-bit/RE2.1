<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RE2.ComplianceWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RE2.ComplianceWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RE2.ComplianceWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-database"></i> Master Data
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Customers" asp-action="Index"><i class="bi bi-people me-2"></i>Customers</a></li>
                                <li><a class="dropdown-item" asp-controller="Licences" asp-action="Index"><i class="bi bi-card-list me-2"></i>Licences</a></li>
                                <li><a class="dropdown-item" asp-controller="LicenceTypes" asp-action="Index"><i class="bi bi-tags me-2"></i>Licence Types</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Substances" asp-action="Index"><i class="bi bi-capsule me-2"></i>Substances</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-shield-check"></i> Compliance
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Reclassifications" asp-action="Index"><i class="bi bi-arrow-repeat me-2"></i>Reclassifications</a></li>
                                <li><a class="dropdown-item" asp-controller="Transactions" asp-action="Index"><i class="bi bi-receipt me-2"></i>Transactions</a></li>
                                <li><a class="dropdown-item" asp-controller="Thresholds" asp-action="Index"><i class="bi bi-sliders me-2"></i>Thresholds</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-file-earmark-bar-graph"></i> Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index"><i class="bi bi-house me-2"></i>Reports Hub</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="TransactionAudit"><i class="bi bi-table me-2"></i>Transaction Audit</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="LicenceUsage"><i class="bi bi-card-checklist me-2"></i>Licence Usage</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="CustomerCompliance"><i class="bi bi-person-lines-fill me-2"></i>Customer Compliance</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="LicenceCorrectionImpact"><i class="bi bi-exclamation-triangle me-2"></i>Correction Impact</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-building"></i> GDP
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="GdpSites" asp-action="Index"><i class="bi bi-list-ul me-2"></i>GDP Sites</a></li>
                                <li><a class="dropdown-item" asp-controller="GdpSites" asp-action="Browse"><i class="bi bi-search me-2"></i>Browse Warehouses</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-clipboard-check"></i> Inspections
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Inspections" asp-action="Index"><i class="bi bi-list-ul me-2"></i>All Inspections</a></li>
                                <li><a class="dropdown-item" asp-controller="Inspections" asp-action="Create"><i class="bi bi-plus-circle me-2"></i>Record Inspection</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Inspections" asp-action="OverdueCorrectiveActions"><i class="bi bi-exclamation-octagon me-2"></i>Overdue Corrective Actions</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - RE2.ComplianceWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
